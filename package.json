{
  "name": "gw2-raiders-inn-bot",
  "version": "3.0.0",
  "description": "A bot that's powering The Raiders Inn on Discord.",
  "repository": "Archomeda/raiders-inn-bot",
  "author": "Archomeda",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "lint": "xo",
    "test": "echo \"Tests are currently not maintained\"",
    "cover": "echo \"Coverage is currently not maintained\""
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "discord.js": "^11.4.2",
    "filesize": "^3.5.10",
    "gw2api-client": "^5.6.5",
    "gw2e-chat-codes": "^1.2.0",
    "i18next": "^10.0.7",
    "i18next-node-fs-backend": "^1.0.0",
    "js-yaml": "^3.10.0",
    "lodash": "^4.17.13",
    "minimist": "Archomeda/minimist#extend-strings",
    "moment-timezone": "^0.5.13",
    "mongoose": "^4.11.11",
    "mwbot": "^1.0.9",
    "node-cache": "^4.1.1",
    "object-hash": "^1.1.8",
    "object-path": "^0.11.4",
    "random-js": "^1.0.8",
    "redis": "^2.7.1",
    "string-argv": "^0.0.2",
    "sugar-date": "^2.0.4",
    "to-markdown": "^3.1.0"
  },
  "devDependencies": {
    "xo": "^0.18.2"
  },
  "xo": {
    "ignores": [
      "test/**/*"
    ],
    "space": 4,
    "rules": {
      "camelcase": "warn",
      "linebreak-style": "off",
      "no-div-regex": "off",
      "no-else-return": "warn",
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 2
        }
      ],
      "no-negated-condition": "off",
      "no-prototype-builtins": "off",
      "no-unused-vars": "warn",
      "no-use-extend-native/no-use-extend-native": "off",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "unicorn/filename-case": "off"
    }
  }
}
